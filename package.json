{
	"name": "pm2-tls-logger",
	"version": "2.0.51",
	"author": "akintunde102",
	"license": "LGPL-3.0-or-later",
	"description": "A simple and efficient PM2 module that forwards logs to Typesense Server",
	"main": "index.js",
	"dependencies": {
		"@pm2/io": "^6.0.0",
		"pm2": "^5.4.1",
		"winston": "^3.13.0",
		"winston-syslog": "^2.7.0"
	},
	"scripts": {
		"build": "tsc",
		"test": "jest",
		"lint": "eslint src/**/*.ts",
		"prepare": "npm run build"
	},
	"config": {
		"host": "",
		"port": "",
		"hostname": ""
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Akintunde102/pm2-tls-logger.git"
	},
	"bugs": {
		"url": "https://github.com/Akintunde102/pm2-tls-logger/issues"
	},
	"keywords": [
		"pm2",
		"pm2-module"
	],
	"apps": [
		{
			"env": {
				"PM2_EXTRA_DISPLAY": "true"
			},
			"max_memory_restart": "200M",
			"merge_logs": true,
			"max_restarts": 2,
			"script": "index.js"
		}
	],
	"devDependencies": {
		"typescript": "^5.7.2"
	}
}